MDScreen:
    name: 'MainScreen'
    MDFloatLayout:
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                title: "Multilanguage Translator"
                left_action_items: [["chat-question", lambda x: app.about()]]
                elevation: 10
                md_bg_color: 226/255, 0, 48/255, 1

            MDBoxLayout:
                orientation: "vertical"
                padding: "10dp"

                MDBoxLayout:
                    # adaptive_height: True
                    size_hint: 1, .4

                    MDTextFieldRect:
                        id: text_input
                        size_hint: 1, 1
                        # height: "225dp"
                        font_name: "Arial"
                        pos_hint: {'center_x': 0.5, 'center_y': .5}

                MDBoxLayout:
                    orientation: "horizontal"
                    # height: "10dp"
                    size_hint: 1, .1
                    # padding: "10dp"

                    MDBoxLayout:
                        size_hint: .55, None

                        MDDropDownItem:
                            id: drop_item
                            pos_hint: {'center_x': 0.5, 'center_y': .3}
                            text: str(app.selected_language)
                            on_release: app.menu.open()
                    
                    MDBoxLayout:
                        size_hint: .45, None
                        padding: "10dp"

                        MDRaisedButton:
                            text: "TERJEMAHKAN"
                            size_hint: 1, None
                            # theme_text_color: "Custom"
                            # text_color: 226/255, 0, 48/255, 1
                            # line_color: 226/255, 0, 48/255, 1
                            md_bg_color: 226/255, 0, 48/255, 1
                            on_release: app.trans(text_input.text, app.languages[drop_item.text])
                
                MDBoxLayout:
                    # adaptive_height: True
                    size_hint: 1, .4

                    MDTextFieldRect:
                        id: result__text
                        size_hint: 1, 1
                        # height: "200dp"
                        font_name: "Arial"
                        text: str(app.result_text)


